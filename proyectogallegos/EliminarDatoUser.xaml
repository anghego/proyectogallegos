<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectogallegos.EliminarDatoUser"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ELIMINAR"
                   FontSize="20"                />
            <Entry x:Name="txtEliminarUser" Placeholder="Ingrese el Código a eliminar" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Eliminar"
                    x:Name="btnEliminarUser" Clicked="btnEliminarUser_Clicked">
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Text="Regresar"
                    x:Name="btnRegresarUser" Clicked="btnRegresarUser_Clicked">
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>